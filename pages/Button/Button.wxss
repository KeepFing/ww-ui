.ww-page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.ww-page-head {
    padding: 40px;
}
.ww-page-body {
    padding-bottom: 40px;
}
.ww-title{
  font-size: 1.2em;
  text-align: center;
  color: grey;
}
.ww-desc{
  font-size: 1em;
  text-align: center;
  color: gainsboro;
}
.ww-space{
  width: 100%;
  height: 2px;
  background-color: white;
}
.ww-button-lg{
    border-color: #b2b2b2;
    background-color: #f8f8f8;
    color: #444;
    position: relative;
    display: inline-block;
    margin: 0;
    padding: 0 12px;
    min-width: 750rpx;
    min-height: 40px;
    border: 1px solid gainsboro;
    border-width: 1px;
    border-radius: 15px;
    vertical-align: top;
    text-align: center;
    text-overflow: ellipsis;
    font-size: 16px;
    line-height: 38px;
}
.ww-button-mid{
    border-color: #b2b2b2;
