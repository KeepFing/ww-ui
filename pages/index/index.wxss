/* pages/index/index.wxss */
.ww-page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.ww-page-head {
    padding: 40px;
}
.ww-page-body {
    padding-bottom: 40px;
}
.ww-title{
  font-size: 1.2em;
  text-align: center;
  color: grey;
}
.ww-desc{
  font-size: 1em;
  text-align: center;
  color: gainsboro;
}
.ww-grids {
  border-top: 1rpx solid #d9d9d9;
  border-left: 1rpx solid #d9d9d9;
  overflow: hidden;
}

.ww-grid-3 {
  position: relative;
  float: left;
  padding: 20px 10px;
  width: 33.33333333%;
  box-sizing: border-box;
  border-right: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}
.ww-grid_active {
  background-color: #ececec;
}

.ww-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
